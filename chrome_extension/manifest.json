{
  "manifest_version": 3,
  "name": "Canvas AI Assistant",
  "version": "3.4.0",
  "description": "AI-powered educational assistant for Canvas LMS - KNOWLEDGE BASE WORKING v3.4.0",
  "permissions": [
    "activeTab",
    "storage",
    "https://cucov2-production.up.railway.app/*"
  ],
  "host_permissions": [
    "https://*.instructure.com/*",
    "https://*.canvas.com/*",
    "https://cucov2-production.up.railway.app/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*.instructure.com/*",
        "https://*.canvas.com/*"
      ],
      "js": ["content-new.js"],
      "css": ["styles.css"]
    }
  ]
}
